<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_8sdp">
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Name: "
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/nameText"
            android:text="Zeeshan "
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText"
            android:text="Class Date: "
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/class_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_name"
            android:layout_toRightOf="@id/dateText"
            android:text="10 Mar 2023, Fri"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/classText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_date"
            android:text="Class Time: "
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_date"
            android:layout_toRightOf="@id/classText"
            android:text="10:00 A.M"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/feesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classText"
            android:text="Contracted Fees: "
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/class_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_time"
            android:layout_toRightOf="@id/feesText"
            android:text="$50/hr"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/class_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feesText"
            android:text=" Online"
            android:gravity="center"
            android:drawableLeft="@drawable/mdi_video"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/requestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_method"
            android:text=" Receive On: "
            android:gravity="center"
            android:drawableLeft="@drawable/calendar_month"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>
        <TextView
            android:id="@+id/request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_method"
            android:layout_toRightOf="@id/requestText"
            android:layout_alignBaseline="@id/requestText"
            android:text="$50/hr"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_4sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_date"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acceptBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_rectangle"
                android:textColor="@color/white"
                android:text="APPROVE"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/rejectBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/red_rectangle"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="REJECT"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:elevation="12dp"
            android:id="@+id/view2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/student_image"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/student_img"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>