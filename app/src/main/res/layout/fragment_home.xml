<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".fragments.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dashboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_theme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dashboard_toolbar"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/imageView1"
                android:src="@drawable/profile_image"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Rajesh Kumar"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"/>
            <TextView
                android:id="@+id/work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Site Engineer"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Sector 62, Noida, U.P"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_below="@id/linear_layout"
        android:layout_marginTop="@dimen/_30sdp">
        <RelativeLayout
            android:id="@+id/classes_offered_box"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <TextView
                android:id="@+id/num_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="18"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="#52B6DF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/num_id"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Classes \nOffered"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/classes_taken_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <TextView
                android:id="@+id/classes_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="18"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="#52B6DF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/classes_taken"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Classes \nTaken"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cancel_classes_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <TextView
                android:id="@+id/cancel_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="18"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="#52B6DF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cancel_classes"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Cancel \nClasses"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/earning_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <TextView
                android:id="@+id/earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="18"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/app_theme2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/earnings"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="Earning"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/paid_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <TextView
                android:id="@+id/paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="18"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/app_theme2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paid"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="Paid"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/due_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <TextView
                android:id="@+id/due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="18"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/app_theme2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/due"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="Due"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <ImageView
                android:id="@+id/health_user"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/healthicons_user"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/health_user"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="Profile"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/attendance_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <ImageView
                android:id="@+id/calendar"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/calendar"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendar"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="Attendance"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/library_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:circularflow_defaultRadius="@dimen/_10sdp">
            <ImageView
                android:id="@+id/library"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/library"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/library"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="Library"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/app_theme"/>

        </RelativeLayout>


    </GridLayout>



</RelativeLayout>