<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_8sdp">
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="File Name:"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/nameText"
            android:text="Course Name_xyz "
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/countryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText"
            android:text="Class Date:"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name"
            android:layout_toRightOf="@id/countryText"
            android:text="Singapore"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/curriculumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryText"
            android:text="Curriculum:"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/curriculum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/country"
            android:layout_toRightOf="@id/countryText"
            android:text="Yes Primary School"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/gradeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/curriculumText"
            android:text="Grade:"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/curriculum"
            android:layout_toRightOf="@id/gradeText"
            android:text="10th"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/languageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gradeText"
            android:text="Language:"
            android:textColor="@color/app_theme2"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>
        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grade"
            android:layout_toRightOf="@id/languageText"
            android:text="English"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_2sdp"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/languageText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/app_theme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/viewBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:textColor="@color/white"
                android:text="View PDF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"/>

            <TextView
                android:id="@+id/downloadBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="Download  PDF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>